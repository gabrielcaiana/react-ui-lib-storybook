{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDirs": ["./src", "./stories"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "lib": ["dom"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}